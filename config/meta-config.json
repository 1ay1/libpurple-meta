  "instagram": {
    "_comment": "Instagram Private API settings - may need frequent updates",
    "api_base": "https://i.instagram.com/api/v1",
    "graphql_api": "https://www.instagram.com/api/graphql",
    "realtime_url": "wss://edge-chat.instagram.com/chat",
